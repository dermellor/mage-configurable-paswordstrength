<config>
    <sections>
        <customer>
            <groups>
                <password>
                    <fields>
                        <password_length translate="label">
                            <label>Password Length</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1000</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <validate>required-entry validate-digits-range digits-range-3-50</validate>
                        </password_length>
                        <password_case translate="label">
                            <label>Must contain both uppercase and lowercase characters</label>
                   			<frontend_type>select</frontend_type>
                        	<source_model>adminhtml/system_config_source_yesno</source_model>     
                            <sort_order>1001</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </password_case>
                        <password_special_characters translate="label">
                            <label>Must contain special characters</label>
                   			<frontend_type>select</frontend_type>
                        	<source_model>adminhtml/system_config_source_yesno</source_model>     
                            <sort_order>1002</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </password_special_characters>
                    </fields>
                </password>
            </groups>
        </customer>
    </sections>
</config>

